!!!
- title = current_page.data.title || "It's just a game..."
- query = current_page.data.query

%html
  %head
    =partial :head, :locals => { :title => title }
  %body
    %header= partial :header
    .lhs= partial :lhs
    .contents
      %h1= title
      =yield
      - if not query.nil?
        %h2= query.title
    .rhs= partial :rhs
    %footer= partial :footer